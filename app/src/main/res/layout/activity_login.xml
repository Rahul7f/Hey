<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/textw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="25dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/login_userid"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textw"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:hint="userid" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_userid"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:hint="password"/>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_marginBottom="274dp"
        android:text="Login" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="4dp"
        android:text="Forget Pasword" />

    <Button
        android:id="@+id/phoneLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:layout_marginBottom="215dp"
        android:text="Phone" />

    <TextView
        android:id="@+id/need_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="101dp"
        android:layout_marginBottom="172dp"
        android:text="don not  have account" />


</RelativeLayout>